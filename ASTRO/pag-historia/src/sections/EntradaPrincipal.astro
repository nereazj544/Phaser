---
import Card from "../components/Card.astro";
---

<ul role="list" class="link-card-grid">
    <Card
        href="/infoPersonajes"
        rel="noopener noreferrer"
        title="✍️ Información sobre los personajes"
        body="Hace a la informacion más actuales que hay"
    />

    <Card
        rel="noopener noreferrer"
        href="/SobreMi"
        title="Sobre mi"
        body="Informacion sobre mi :)"
    />
</ul>

<style>
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
</style>
